<!-- ========================  Stretcher widget ======================== -->
<br>
<section class="stretcher-wrapper">
  <!-- === stretcher header === -->
  <header>
    <div class="row">
      <div class="col-md-offset-2 col-md-8 text-center">
        <h2 class="title">Most Searched Cities</h2>
        <div class="text custom-divider">
          <p>Check out our popular cities</p>
          <hr>
        </div>
      </div>
    </div>
  </header>
  <ul class="stretcher">
    <!-- === stretcher item === -->
    <% @cities.each_with_index do |city,index| %>
      <% if index == 4 %>
        <% break %>
      <% end %>
      <li class="stretcher-item" style="background-image:url(' <%= (url_for(city.image)) %>')">
        <!--logo-item-->
        <div class="stretcher-logo">
          <div class="text">
            <div class="custom-heading">
              <span class="text-intro"><%= city.title %></span>
            </div>
          </div>
        </div>
        <!--main text-->
        <figure>
          <h4><%= city.title %></h4>
          <figcaption></figcaption>
        </figure>
        <!--anchor-->
        <a href="<%= city_path(city) %>">Anchor link</a>
      </li>
    <% end %>
    <!-- === stretcher item more=== -->
    <li class="stretcher-item more">
      <div class="more-icon">
        <span data-title-show="Show more" data-title-hide="+"></span>
      </div>
      <a href="<%= cities_path %>"></a>
    </li>
  </ul>
</section>


<!-- ========================  Products widget ======================== -->
<section class="products custom-product-homepage">
  <div class="container">
    <!-- === header title === -->
    <header>
      <div class="row">
        <div class="col-md-offset-2 col-md-8 text-center">
          <h2 class="title">Most Viewed products</h2>
          <div class="text custom-divider">
            <p>Check out our latest collections</p>
            <hr>
          </div>
        </div>
      </div>
    </header>

    <div class="row">
      <div class="responsivee">
        <% @popular_products.each_with_index do |product, index| %>
          <% if product.visibility == true && product.user.active == true %>
            <% if index == 50 %>
              <% break %>
            <% end %>
            <article>
              <div class="figure-grid custom-card-container text-center">
                <div class="image custom-figure-grid">
                  <% if product.images.attached? %>
                    <%= link_to product do%>
                      <%= image_tag(url_for(product.images.first)) %><br>
                    <% end %>
                  <% else %>
                    <%= link_to product do%>
                      <img src="/assets/furnishia/no_image_product.jpg" alt=""  />
                    <% end %>
                  <% end %>
                </div>
                <div class="text">
                  <%= link_to product do%>
                    <h2 class="title h4"><%=product.title %></h2>
                    <hr class="card-text-divider">
                    <span> <%= product.user.category.title %></span>
                  <% end %>
                </div>
                <a href="<%= product_path(product) %>" class="btn card-btn btn-main">View</a>
              </div>
            </article>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- === button more === -->
    <div class="wrapper-more">
      <a href="<%= popular_list_products_path %>" class="btn btn-main">View More Products</a>
      <hr class="home-page">
    </div>
  </div> <!--/container-->
</section>


