                  <% if index == 9 %>
                    <% break %>
                  <% end %>
                  <% if index % 3 == 0 %>
                    <div class="col-md-2">
                    </div>
                  <% end %>
                  <div class="col-md-3 custom-padding-homepage">
                    <a href="<%= vendors_path(category_id: category.id) %>" class="btn btn-outlined btn-default"><%= category.title %></a>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div style="clear:both"></div>
        </div>
      </div>
    </div>
  </div>
</section>


