<section class="blog">
  <div class="container">
    <!-- === blog header === -->
    <header>
      <div class="row">
        <div class="col-md-offset-2 col-md-8 text-center">
          <h1 class="h2 title">Blog</h1>
          <div class="text custom-divider">
            <p>Latest news from the blog</p>
            <hr>
          </div>
        </div>
      </div>
    </header>
    <div class="row">
      <div class="responsivee custom-blog-card custom-card-card">
        <% @blogs.each_with_index do |blog, index| %>
          <% if index == 50 %>
            <% break %>
          <% end %>
          <article>
            <%= link_to blog do%>
              <div class="image" >
                <% if blog.image.attached? %>
                  <%= image_tag(url_for(blog.image)) %>
                <% else %>
                  <img src="/assets/furnishia/no_image_product.jpg" alt=""  />
                <% end %>
              </div>
              <div class="entry entry-table">
                <div class="date-wrapper">
                  <div class="date">
                    <span><%= blog.updated_at.strftime('%b')%></span>
                    <strong><%= blog.updated_at.strftime('%d')%></strong>
                    <span><%= blog.updated_at.strftime('%Y')%></span>
                  </div>
                </div>
                <div class="title">
                  <h2 class="h5"><%= blog.title %></h2>
                </div>
              </div>
              <div class="show-more">
                <span class="btn btn-main btn-block custom-blog-btn">Read More</span>
              </div>
            <% end %>
          </article>
        <% end %>
      </div>
    </div>
    <div class="wrapper-more">
