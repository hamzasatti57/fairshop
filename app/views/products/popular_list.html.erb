
<!-- ======================== Main header ======================== -->

<section class="main-header" style="background-image:url(assets/images/gallery-4.jpg)">
  <header>
    <div class="container">
      <h1 class="h2 title">All Popular Products</h1>
      <ol class="breadcrumb breadcrumb-inverted">
        <li><a href="<%= root_path %>"><span class="icon icon-home"></span></a></li>
        <li><a class="active" >Popular Products</a></li>
      </ol>
    </div>
  </header>
</section>


<!-- ======================== Products ======================== -->

<section class="products">
  <div class="container">
    <div class="row">
      <%  @popular_products.each do |product|  %>
        <% if product.visibility == true %>
          <div class="col-md-3 col-xs-6">
            <article>
              <div class="figure-grid">
                <div class="image">
                  <% if product.images.attached? %>
                    <%= link_to product do%>
                      <%= image_tag(url_for(product.images.first)) %><br>
                    <% end %>
                  <% else %>
                    <%= link_to product do%>
                      <img src="/assets/furnishia/product-1.png" alt="" width="360" />
                    <% end %>
                  <% end %>
                </div>
                <div class="text">
                  <%= link_to product do%>
                    <h2 class="title h4"><%= product.title %></h2>
                  <% end %>
                  <sup> <%= product.user.category.title %></sup>
                </div>
              </div>
            </article>
          </div>
        <% end %>
      <% end %>
    </div><!--/row-->
    <!--Pagination-->
    <div class="pagination-wrapper">
      <%= will_paginate @popular_products %>
    </div>
  </div> <!--/product items-->
</section>

