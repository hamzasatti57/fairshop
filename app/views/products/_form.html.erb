
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :product_name %>
    <%= f.input :product_category %>
    <%= f.input :product_brand %>
    <%= f.input :product_model %>
    <%= f.input :product_warranty %>
    <%= f.input :product_color %>
    <%= f.input :product_isview %>
    <%= f.input :product_sale_status %>
    <%= f.input :product_purchase_price %>
    <%= f.input :product_sale_price %>
    <%= f.input :product_cash_on_delivery %>
    <%= f.input :product_home_delivery %>
    <%= f.input :product_return_days %>
    <%= f.input :product_discount %>
    <%= f.input :product_material %>
    <%= f.input :product_quantity %>
    <%= f.association :store %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
