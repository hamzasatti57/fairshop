<!-- ========================  Main header ======================== -->

<section class="main-header" style="background-image:url(assets/images/gallery-2.jpg)">
  <header>
    <div class="container">
      <h1 class="h2 title"><%= @user.full_name %></h1>
      <ol class="breadcrumb breadcrumb-inverted">
        <li><a href="<%= root_path %>"><span class="icon icon-home"></span></a></li>
        <li><a href="<%= vendors_path(category_id: @user.category_id) %>"><%= @user.category.title %> Vendors</a></li>
        <li><a class="active">Profile overview</a></li>
      </ol>
    </div>
  </header>
</section>

<!-- ========================  Product ======================== -->

<section class="product">
  <div class="main">
    <div class="container">
      <div class="row product-flex">

        <!-- product flex is used only for mobile order -->
        <!-- on mobile 'product-flex-info' goes bellow gallery 'product-flex-gallery' -->

        <div class="col-md-4 col-sm-12 product-flex-info">
          <div class="clearfix">

            <!-- === product-title === -->

            <h1 class="title" ><%= @user.full_name %> </h1>

            <div class="clearfix">


              <hr />

              <!-- === info-box === -->

              <div class="info-box">
                <span><strong>Manufacturer</strong></span>
                <span><%= @user.full_name %></span>

              </div>
              <div class="info-box">
                <span><strong>Catelog</strong></span>
                <span>
                <% if @user.profile.pdf.attached? %>
                  <%= link_to @user.profile.pdf.filename, rails_blob_path(@user.profile.pdf, disposition: 'attachment') %>
                <% end %>
                  </span>
              </div>
              <div id="avg_rate">

              </div>
              <hr />
              <!-- === info-box === -->
            </div> <!--/clearfix-->
          </div> <!--/product-info-wrapper-->
        </div> <!--/col-md-4-->
        <!-- === product item gallery === -->


      </div>
    </div>
  </div>

  <!-- === product-info === -->

  <div class="info">
    <div class="container">
      <div class="row">

        <!-- === product-designer === -->

        <div class="col-md-4">
          <div class="designer">
            <div class="box">
              <div class="image">
                <% if @user.profile.image.attached? %>
                  <%= image_tag(url_for(@user.profile.image)) %>
                <% else %>
                  <img src="/assets/furnishia/user-1.jpg" alt="" height="250" />
                <% end %>
              </div>
              <div class="name">
                <div class="h3 title"><%= @user.full_name %><small><%= @user.category.title %></small></div>
                <hr />
                <p><a href="mailto:johndoe@mail.com"><i class="icon icon-envelope"></i> <%= @user.email %></a></p>
                <p><a href="tel:002255858"><i class="icon icon-phone-handset"></i> <%= @user.contact_details %></a></p>
                <p>
                  <a href="<%= @user.profile.facebook %>" class="btn btn-main btn-xs"><i class="fa fa-facebook"></i></a>
                  <a href="<%= @user.profile.instagram %>" class="btn btn-main btn-xs"><i class="fa fa-instagram"></i></a>
                  <a href="<%= @user.profile.twitter %>" class="btn btn-main btn-xs"><i class="fa fa-twitter"></i></a>
                </p>
              </div> <!--/name-->
            </div> <!--/box-->

          </div> <!--/designer-->
        </div> <!--/col-md-4-->
        <!-- === nav-tabs === -->

        <div class="col-md-8">
          <ul class="nav nav-tabs" role="tablist">

            <li role="presentation" class="active">
              <a href="#design" aria-controls="design" role="tab" data-toggle="tab">
                <i class="icon icon-sort-alpha-asc"></i>
                <span>Description</span>
              </a>
            </li>
            <li role="presentation" >
              <a href="#designer" aria-controls="designer" role="tab" data-toggle="tab">
                <i class="icon icon-user"></i>
                <span>Collection</span>
              </a>
            </li>
          </ul>

          <!-- === tab-panes === -->

          <div class="tab-content">

            <div role="tabpanel" class="tab-pane " id="designer">
              <div class="content">

                <!-- === designer collection title === -->

                <h3>Designers collection</h3>

                <div class="products">
                  <div class="row">

                    <!-- === product-item === -->
                    <% @projects.each_with_index do |project, index| %>
                      <% if index == 4 %>
                        <% break %>
                      <% end %>
                      <div class="col-md-6 col-xs-6">
                        <article>
                          <div class="figure-grid">
                            <div class="image">
                              <% if project.images.attached? %>
                                <%= link_to project do%>
                                  <%= image_tag(url_for(project.images.first)) %><br>
                                <% end %>
                              <% else %>
                                <%= link_to project do%>
                                  <img src="/assets/furnishia/product-1.png" alt="" width="360" />
                                <% end %>
                              <% end %>
                            </div>
                            <div class="text">
                              <h4 class="title"><%= project.title %></h4>
                              <span class="description clearfix"><%= project.description %></span>
                            </div>
                          </div>
                        </article>
                      </div>
                    <% end %>
                  </div> <!--/row-->
                </div> <!--/products-->
              </div> <!--/content-->
            </div> <!--/tab-pane-->
            <!-- ============ tab #2 ============ -->

            <div role="tabpanel" class="tab-pane active" id="design">
              <div class="content">
                <div class="row">
                  <div class="col-md-8">
                    <h3>Detail Description</h3>
                    <p>
                      <%= @user.profile.description %>
                    </p>
                  </div>
                </div> <!--/row-->
              </div> <!--/content-->
            </div> <!--/tab-pane-->
            <!-- ============ tab #3 ============ -->

            <div role="tabpanel" class="tab-pane" id="rating">

              <!-- ============ ratings ============ -->


            </div> <!--/tab-pane-->
          </div> <!--/tab-content-->
        </div>
      </div> <!--/row-->
    </div> <!--/container-->
  </div> <!--/info-->
</section>

