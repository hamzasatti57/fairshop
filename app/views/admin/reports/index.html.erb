<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> General Reports</div>
  <div class="card-body">
  <div class="row">
    <div class="col-lg-10 offset-1">
      <% if current_user.display_products? %>
      <table id="product-table" class="table table-striped table-bordered display ">
        <thead>
        <tr>
          <th>Sr#</th>
          <th>Title</th>
          <th>Views</th>
          <th>Likes</th>
          <th>Rating</th>
          <th>Rating Count</th>
          <th>Updated Date</th>
          <th>Description</th>
          <th>Price</th>
          <th>Inventory</th>
          <th>Visibility</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @products.each_with_index  do |product, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= product.title %></td>
            <td><%= product.hits %></td>
            <td><%= product.likes.count %></td>
            <td><%= product.ratings.average(:value).nil? ? "0" : product.ratings.average(:value)%></td>
            <td><%= product.ratings.count %></td>
            <td><%= product.updated_at %></td>
            <td><%= truncate(product.description, length: 20) %></td>
            <td><%= product.price %></td>
            <td><%= product.inventory %></td>
            <td><%= product.visibility ? 'Yes' : 'No' %></td>
            <td><%= product.status ? 'Active' : 'Inactive'%></td>
            <td><%= link_to "Edit",  edit_admin_product_path(product), class: "btn btn-xs btn-primary" %>
              <%= link_to "Show",  admin_product_path(product), class: "btn btn-xs btn-success" %>
              <%= link_to "Delete", admin_product_path(product), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%elsif current_user.display_projects? %>
        <table id="product-table" class="table table-striped table-bordered display ">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>Title</th>
            <th>Views</th>
            <th>Likes</th>
            <th>Rating</th>
            <th>Rating Count</th>
            <th>Updated Date</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @projects.each_with_index  do |project, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= project.title %></td>
              <td><%= project.hits %></td>
              <td><%= project.likes.count %></td>
              <td><%= project.ratings.average(:value).nil? ? "0" : project.ratings.average(:value)%></td>
              <td><%= project.ratings.count %></td>
              <td><%= project.updated_at %></td>
              <td><%= truncate(project.description, length: 20) %></td>
              <td><%= link_to "Edit",  edit_admin_project_path(project), class: "btn btn-xs btn-primary" %>
                <%= link_to "Show",  admin_project_path(project), class: "btn btn-xs btn-success" %>
                <%= link_to "Delete", admin_project_path(project), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

<script>
    $(document).ready( function () {
        $('#product-table').dataTable();
    } );
</script>
