<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Product Categories</div>
  <div class="card-body">
    <table id="product-category-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>Title</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @product_categories.each do |product_category| %>
        <tr>
          <td><%= product_category.title %></td>
          <td><%= link_to "Edit",  edit_admin_product_category_path(product_category), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
            <%= link_to "Delete", admin_product_category_path(product_category), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#product-category-table').dataTable();
    } );
</script>

