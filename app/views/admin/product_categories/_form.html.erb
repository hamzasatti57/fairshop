<%= render 'shared/errors', obj: product_category %>
<%= form_for  product_category, product_category_form_attributes(product_category) do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select(:category_id, Category.all, :id, :title) %> <br/>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", :required => true, autocomplete: false, placeholder: "Product Category Title", autofocus: true %> <br/>
  </div>
  <div class="form-group">
    <%= f.label :image %> <br>
  <%= f.file_field :images, multiple: true %><br><br>
  </div>
  <%= f.submit class: "btn btn-block custom-table-edit-btn btn-primary"%>
<% end %>