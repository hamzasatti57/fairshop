<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> Listing all Jobs</div>
  <div class="card-body">
    <table id="jobs-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>Company</th>
        <th>Position</th>
        <th>Description</th>
        <th>Location</th>
        <th>Country</th>
        <th>Salary</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.company %></td>
          <td><%= job.title %></td>
          <td><%= truncate(job.description, length: 50) %></td>
          <td><%= truncate(job.address, length: 50) %></td>
          <td><%= truncate(job.country, length: 50) %></td>
          <td><%= job.salary %></td>
          <td><%= link_to "Edit",  edit_admin_job_path(job), class: "btn btn-xs btn-primary" %>
            <%= link_to "Show",  admin_job_path(job), class: "btn btn-xs btn-success" %>
            <%= link_to "Delete", admin_job_path(job), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#jobs-table').dataTable();
    } );
</script>
