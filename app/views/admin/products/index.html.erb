<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Vendors</div>
  <div class="card-body">
    <div class="col-lg-10 offset-1">
      <table id="product-table" class="table table-striped table-bordered display">
        <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Inventory</th>
          <th>Visibility</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= truncate(product.description, length: 15) %></td>
            <td><%= product.price %></td>
            <td><%= product.inventory %></td>
            <td><%= product.visibility ? 'Yes' : 'No' %></td>
            <td><%= product.status ? 'Active' : 'Inactive'%></td>
            <td><%= link_to "Edit",  edit_admin_product_path(product), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
              <%= link_to "Show",  admin_product_path(product), class: "btn btn-xs btn-success custom-table-show-btn" %>
              <%= link_to "Delete", admin_product_path(product), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
    $(document).ready( function () {
        $('#product-table').dataTable();
    } );
</script>
