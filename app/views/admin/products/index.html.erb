<div class="row">
  <div class="col-lg-8 offset-2">
    <div class="card">
      <div class="card-header">
        <i class="fa fa-align-justify"></i> Listing all Product</div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>Visibility</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td><%= truncate(product.description, length: 50) %></td>
              <td><%= product.price %></td>
              <td><%= product.inventory %></td>
              <td><%= product.visibility ? 'Yes' : 'No' %></td>
              <td><%= product.status ? 'Active' : 'Inactive'%></td>
              <td><%= link_to "Edit",  edit_admin_product_path(product), class: "btn btn-xs btn-primary" %></td>
              <td><%= link_to "Show",  admin_product_path(product), class: "btn btn-xs btn-success" %></td>
              <td><%= link_to "Delete", admin_product_path(product), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>