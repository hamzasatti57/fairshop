<div class="row">
  <div class="col-lg-8 offset-2">
    <div class="card">
      <div class="card-header">
        <i class="fa fa-align-justify"></i> Listing all Advertisements</div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @advertisements.each do |advertisement| %>
            <tr>
              <td><%= advertisement.title %></td>
              <td><%= truncate(advertisement.description, length: 50) %></td>
              <td><%= link_to "Edit",  edit_admin_advertisement_path(advertisement), class: "btn btn-xs btn-primary" %>
              <%= link_to "Delete", admin_advertisement_path(advertisement), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
