<div class="row">
  <div class="col-lg-9 mt-3 offset-2">
    <div class="card">
      <div class="card-header">
        <strong>Advertisment</strong>
      </div>
      <div class="card-body">
        <h2 align="center">Advertisement: <%= @advertisement.title %></h2>
        <div class="well col-xs-8 col-xs-offset-2">
          <div class="Center">
            <% if @advertisement.image.attached? %>
              <%= image_tag(url_for(@advertisement.image.variant(resize: '200x200'))) %><br>
            <% end %>
          </div>
          <br>
          <h4>Description: </h4><br>
          <p><%= @advertisement.description%></p>
          <div class="article-actions">
            <%= link_to "Edit",  edit_admin_advertisement_path(@advertisement), class: "btn btn-xs btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
