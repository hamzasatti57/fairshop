
<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> Listing all Cities</div>
  <div class="card-body">
    <table id="city-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.title %></td>
          <td><%= link_to "Edit",  edit_admin_city_path(city), class: "btn btn-xs btn-primary" %>
            <%= link_to "Show",  admin_city_path(city), class: "btn btn-xs btn-success" %>
            <%= link_to "Delete", admin_city_path(city), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<script>
    $(document).ready( function () {
        $('#city-table').dataTable();
    } );
</script>
