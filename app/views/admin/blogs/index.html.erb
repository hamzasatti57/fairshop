<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> Listing all Blogs</div>
  <div class="card-body">
    <table id="product-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>Title</th>
        <th>Descrption</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= truncate(blog.description, length: 50) %></td>
          <td><%= link_to "Edit",  edit_admin_blog_path(blog), class: "btn btn-xs btn-primary" %>
            <%= link_to "Show",  admin_blog_path(blog), class: "btn btn-xs btn-success" %>
            <%= link_to "Delete", admin_blog_path(blog), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#blogs-table').dataTable();
    } );
</script>

