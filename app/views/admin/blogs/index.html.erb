<div class="row">
  <div class="col-lg-8 offset-2">
    <div class="card">
      <div class="card-header">
        <i class="fa fa-align-justify"></i> Listing all Blogs</div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
          </tr>
          </thead>
          <tbody>
          <% @blogs.each do |blog| %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= truncate(blog.description, length: 50) %></td>
              <td><%= link_to "Edit",  edit_admin_blog_path(blog), class: "btn btn-xs btn-primary" %></td>
              <td><%= link_to "Delete", admin_blog_path(blog), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
