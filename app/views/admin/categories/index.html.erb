<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> Listing all Categories</div>
  <div class="card-body">
    <table id="categories-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>ID</th>
        <th>Category Title</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.title %></td>
          <td>
            <%= link_to "Edit",  edit_admin_category_path(category), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
            <%= link_to "Delete", admin_category_path(category), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<script>
    $(document).ready( function () {
        $('#categories-table').dataTable();
    } );
</script>
