<div class="row">
  <div class="col-lg-6 offset-3">
    <div class="card">
      <div class="card-header custom-card-header">
        <i class="fa fa-align-justify"></i> Listing all Categories</div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
          <tr>
            <th>ID</th>
            <th>Category Title</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.title %></td>
              <td>
              <%= link_to "Edit",  edit_admin_category_path(category), class: "btn btn-xs custom-table-edit-btn btn-primary" %>
              <%= link_to "Delete", admin_category_path(category), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %>
              </td>
              
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>