<div class="card">
  <div class="card-header custom-card-header">
    <i class="fa fa-align-justify"></i> All Users</div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-12">
        <table id="user-table" class="table table-striped table-bordered display">
          <thead>
          <tr>
            <th>Sr#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Category</th>
            <th>Status</th>
            <th>AAA</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each_with_index  do |user ,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.city_title %></td>
              <td><%= user.category_title %></td>
              <td><%= user.active ? 'Active' : 'Inacitve' %></td>
              <td><%= user.AAA ? 'Yes' : 'No' %></td>
              <td><%= link_to "Edit",  edit_admin_user_path(user), class: "btn btn-xs btn-primary custom-table-edit-btn" %>
                <%= link_to "Delete", admin_user_path(user), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger custom-table-delt-btn" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#user-table').dataTable();
    } );
</script>

