<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> Listing all Vendors</div>
  <div class="card-body">
    <table id="user-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Category</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.city_title %></td>
          <td><%= user.category_title %></td>
          <td><%= user.active ? 'Active' : 'Inacitve' %></td>
          <td><%= link_to "Edit",  edit_admin_user_path(user), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", admin_user_path(user), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $(document).ready( function () {
        $('#user-table').dataTable();
    } );
</script>

