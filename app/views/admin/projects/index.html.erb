
<div class="card">
  <div class="card-header">
    <i class="fa fa-align-justify"></i> Listing all Vendors</div>
  <div class="card-body">
    <table id="project-table" class="table table-striped table-bordered display">
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= truncate(project.description, length: 15) %></td>
          <td><%= link_to "Edit",  edit_admin_project_path(project), class: "btn btn-xs btn-primary" %>
            <%= link_to "Show",  admin_project_path(project), class: "btn btn-xs btn-success" %>
            <%= link_to "Delete", admin_project_path(project), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
    $(document).ready( function () {
        $('#project-table').dataTable();
    } );
</script>
