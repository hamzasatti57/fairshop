<div class="animated fadeIn">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-primary">
          <div class="card-body pb-0">
            <% if current_user.display_products? %>
              <div class="text-value">Total Products</div>
              <div class="text-value"><%= @products.count %></div>
            <% elsif current_user.display_projects?%>
              <div class="text-value">Total Projects</div>
              <div class="text-value"><%= @products.count %></div>
            <% end %>
          </div>
          <div class="chart-wrapper mt-3 mx-3" style="height:70px;">
            <canvas class="chart" id="card-chart1" height="70"></canvas>
          </div>
        </div>
      </div>
      <!-- /.col-->
      <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-info">
          <div class="card-body pb-0">
            <div class="text-value">Total Likes</div>
            <% if current_user.display_products? %>
              <div class="text-value"><%= current_user.products.collect(&:likes).flatten.count %></div>
            <% elsif current_user.display_projects?%>
              <div class="text-value"><%= current_user.projects.collect(&:likes).flatten.count %></div>
            <% end %>
          </div>
          <div class="chart-wrapper mt-3 mx-3" style="height:70px;">
            <canvas class="chart" id="card-chart2" height="70"></canvas>
          </div>
        </div>
      </div>
      <!-- /.col-->
      <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-warning">
          <div class="card-body pb-0">
            <div class="text-value">Total Comments</div>
            <% if current_user.display_products? %>
              <div class="text-value"><%= current_user.products.collect(&:comments).flatten.count %></div>
            <% elsif current_user.display_projects?%>
              <div class="text-value"><%= current_user.projects.collect(&:comments).flatten.count %></div>
            <% end %>
          </div>
          <div class="chart-wrapper mt-3 mx-3" style="height:70px;">
            <canvas class="chart" id="card-chart2" height="70"></canvas>
          </div>
        </div>
      </div>
      <!-- /.col-->
      <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-danger">
          <div class="card-body pb-0">
            <div class="text-value">Catalog Download</div>
            <div class="text-value"><%= current_user.profile.catalog_download_count %></div>
          </div>
          <div class="chart-wrapper mt-3 mx-3" style="height:70px;">
            <canvas class="chart" id="card-chart2" height="70"></canvas>
          </div>
        </div>
      </div>
      <!-- /.col-->
    </div>
    <!-- /.row-->
    <div class="row">
      <% if current_user.display_products? %>
        <label>Select Product:</label>
        <select id="product_project">
          <% @products.each do |product| %>
            <option value="<%= product.id %>"><%= product.title %></option>
          <% end %>
        </select>
      <% elsif current_user.display_projects?%>
        <label>Select Project:</label>
        <select id="product_project">
          <% @projects.each do |project| %>
            <option value="<%= project.id %>"><%= project.title %></option>
          <% end %>
        </select>
      <% end %>
      <label>Select Type:</label>
      <select id="type">
          <option value="0">Likes</option>
        <option value="1">Views</option>
        <option value="2">Comments</option>
      </select>
    </div>
    <div class="row">
      <div class="col-md-6 offset-3" id="chart-container">
        <%= render :partial => 'chart' %>
      </div>
    </div>
    <div class="row">
      <div class="card">
        <div class="card-header custom-card-header">
          <i class="fa fa-align-justify"></i> General Reports</div>
        <div class="card-body">
          <div class="row">
            <div class="col-lg-12">
              <% if current_user.display_products? %>
                <table id="product-table" class="table table-striped table-bordered display ">
                  <thead>
                  <tr>
                    <th>Sr#</th>
                    <th>Title</th>
                    <th>Views</th>
                    <th>Likes</th>
                    <th>Rating</th>
                    <th>Rating Count</th>
                    <th>Updated Date</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Inventory</th>
                    <th>Visibility</th>
                    <th>Status</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @products.each_with_index  do |product, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= product.title %></td>
                      <td><%= product.hits %></td>
                      <td><%= product.likes.count %></td>
                      <td><%= product.ratings.average(:value).nil? ? "0" : product.ratings.average(:value)%></td>
                      <td><%= product.ratings.count %></td>
                      <td><%= product.updated_at %></td>
                      <td><%= truncate(product.description, length: 20) %></td>
                      <td><%= product.price %></td>
                      <td><%= product.inventory %></td>
                      <td><%= product.visibility ? 'Yes' : 'No' %></td>
                      <td><%= product.status ? 'Active' : 'Inactive'%></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              <%elsif current_user.display_projects? %>
                <table id="product-table" class="table table-striped table-bordered display ">
                  <thead>
                  <tr>
                    <th>Sr#</th>
                    <th>Title</th>
                    <th>Views</th>
                    <th>Likes</th>
                    <th>Rating</th>
                    <th>Rating Count</th>
                    <th>Updated Date</th>
                    <th>Description</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @projects.each_with_index  do |project, index| %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td><%= project.title %></td>
                      <td><%= project.hits %></td>
                      <td><%= project.likes.count %></td>
                      <td><%= project.ratings.average(:value).nil? ? "0" : project.ratings.average(:value)%></td>
                      <td><%= project.ratings.count %></td>
                      <td><%= project.updated_at %></td>
                      <td><%= truncate(project.description, length: 20) %></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <script>
          $(document).ready( function () {
              $('#product-table').dataTable();

          } );
      </script>

    </div>
  </div>
  <script>
      $( document ).on('turbolinks:load', function(){
          $('#product_project').change(function(){

              var selected_product_project = $(this).children("option:selected").val();
              var selected_type = $('#type').children("option:selected").val();
              $.ajax({
                  url: `/admin/dashboards.js?product_project_id=${selected_product_project}&type=${selected_type}`,
                  method: 'get',
              });

          });
          $('#type').change(function(){

              var selected_product_project = $('#product_project').children("option:selected").val();
              var selected_type = $(this).children("option:selected").val();
              $.ajax({
                  url: `/admin/dashboards.js?product_project_id=${selected_product_project}&type=${selected_type}`,
                  method: 'get',
              });

          });
      });
      $(document).ready(function() {
          var selected_product_project = $('#product_project').children("option:selected").val();
          var selected_type = $('#type').children("option:selected").val();
          $.ajax({
              url: `/admin/dashboards.js?product_project_id=${selected_product_project}&type=${selected_type}`,
              method: 'get',
          });
      });
  </script>


  <!-- /.row-->
</div>