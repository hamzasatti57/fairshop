<div class="row">
  <div class="col-lg-8 offset-2">
    <div class="card">
      <div class="card-header">
        <i class="fa fa-align-justify"></i> Listing all Companies</div>
      <div class="card-body">
        <table class="table table-responsive-sm">
          <thead>
          <tr>
            <th>Title</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Individual Experience</th>
          </tr>
          </thead>
          <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.title %>
              <td><%= company.address %></td>
              <td><%= company.contact %></td>
              <td><%= company.individual_experience %></td>
              <td><%= link_to "Edit",  edit_admin_company_path(company), class: "btn btn-xs btn-primary" %></td>
              <td><%= link_to "Delete", admin_company_path(company), method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
