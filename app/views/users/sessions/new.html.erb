
    <section class="login_part padding_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>WELCOME TO FAIR PRICE SHOP. YOU WILL FIND BEST MARKET SELLING ITEM IN AFFORDABLE PRICE HERE.</p>
                                <%= link_to "Create an Account", new_user_registration_path, class: "btn_3"%>
                            <!-- <a href="#" class="btn_3">Create an Account</a> -->
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>Welcome Back ! <br>
                                Please Sign in now</h3>
                                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                                    <% flash.each do |name, msg| %>
                                      <% if msg.class == Array %>
                                        <% msg.each do |message| %>
                                          <li><%= message %></li>
                                        <% end %>
                                      <% else %>
                                        <li><%= msg %></li>
                                      <% end %>
                                    <% end %>
                                <div class="col-md-12 form-group p_star">
                                    <%= f.email_field :email,  class: "form-control", placeholder: "Email", autofocus: true %>
                                    <!-- <input type="text" class="form-control" id="name" name="name" value=""
                                        placeholder="Username"> -->
                                </div>
                                <div class="col-md-12 form-group p_star">
                                   <%= f.password_field :password,  class: "form-control", placeholder: "Password", autofocus: true %>

                                    <!-- <input type="password" class="form-control" id="password" name="password" value=""
                                        placeholder="Password"> -->
                                </div>
                                <div class="col-md-12 form-group">
                                    <div class="creat_account d-flex align-items-center">
                                        <input type="checkbox" id="f-option" name="selector" style="width: 13px; height: 13px;border:1px solid #4e4e4ed1;border-radius:2px" required>
                                        <label for="f-option">Remember me</label>
                                    </div>
                                      <%= f.submit "Log in", class: "btn_3" %>
                                    <!-- <button type="submit" value="submit" class="btn_3">
                                        log in
                                    </button> -->
                                    <a class="lost_pass" href="#">forgot password?</a>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



