<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="app custom-login-page login-page flex-row align-items-center">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <div class="card-group">
            <div class="card p-4">
              <div class="card-body">
                <h1>Login</h1>
                <p class="text-muted">Sign In to your account</p>
                <hr>
                <% flash.each do |name, msg| %>
                  <% if msg.class == Array %>
                    <% msg.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  <% else %>
                    <li><%= msg %></li>
                  <% end %>
                <% end %>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="icon-user"></i>
                    </span>
                  </div>
                  <%= f.email_field :email,  class: "form-control", placeholder: "Username", autofocus: true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="icon-lock"></i>
                    </span>
                  </div>
                  <%= f.password_field :password,  class: "form-control", placeholder: "Password", autofocus: true %>
                </div>
                <div class="row">
                  <div class="col-6">
                    <%= f.submit "Log in", class: "btn btn-primary custom-login-btn px-4" %>
                  </div>
                  <div class="col-6 text-right">
                    <%= link_to "Forgot your password?", new_user_password_path(resource), :class => "btn btn-link px-0 custom-forgot-text"%>
                  </div>
                </div>
              </div>
            </div>
            <div class="card text-white bg-primary custom-register-card py-5 d-md-down-none" style="width:44%">
              <div class="card-body text-center">
                <div>
                  <h2>Sign up</h2>
                  <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                  <%= link_to "Register Now!", new_user_registration_path, class: "btn btn-primary custom-register-btn active mt-3"%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>




