<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="app login-page flex-row align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card-group">
            <div class="card p-4">
              <div class="card-body">
                <h1>Sign Up</h1>
                <p class="text-muted">Sign up to your account</p>
                <%= render 'shared/errors', obj: resource %>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-user"></i>
                      </span>
                  </div>
                  <%= f.text_field :first_name,  class: "form-control", placeholder: "First Name", autofocus: true %>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-user"></i>
                      </span>
                  </div>
                  <%= f.text_field :last_name,  class: "form-control", placeholder: "Last Name", autofocus: true %>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-user"></i>
                      </span>
                  </div>
                  <%= f.text_field :username,  class: "form-control", placeholder: "Username", autofocus: true %>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-envelope-open"></i>
                      </span>
                  </div>
                  <%= f.email_field :email,  class: "form-control", placeholder: "Email", autofocus: true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-lock"></i>
                      </span>
                  </div>
                  <%= f.password_field :password,  class: "form-control", placeholder: "Password", autofocus: true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-lock"></i>
                      </span>
                  </div>
                  <%= f.password_field :password_confirmation,  class: "form-control", placeholder: "Confirm Password", autofocus: true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-phone
"></i>
                      </span>
                  </div>
                  <%= f.text_field :contact_details,  class: "form-control", placeholder: "Contact Number", autofocus: true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-home
"></i>
                      </span>
                  </div>
                  <%= f.select(:city_id, options_for_select(City.all.map{|city| [city.title, city.id]}), { prompt: "Please Select" }, { class: 'form-control' }) %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-target

"></i>
                      </span>
                  </div>
                  <%= f.select(:category_id, options_for_select(Category.all.map{|category| [category.title, category.id]}), { prompt: "Please Select" }, { class: 'form-control' }) %>
                </div>
                <div class="row">
                  <div class="col-6">
                    <%= f.submit "Sign Up", class: "btn btn-primary px-4" %>
                    <%= link_to "Login", new_user_session_path, class: "btn btn-primary px-4"%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



