<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="app login-page custom-register-page flex-row align-items-center">
    <div class="container">
      <div class="row custom-register-page-card">
        <div class="col-md-8">
          <div class="card-group">
            <div class="card p-4">
              <div class="card-body">
                <h1>Sign Up</h1>
                <p class="text-muted">Sign up to your account</p>
                <%= render 'shared/errors', obj: resource %>
                <%= f.hidden_field :role, value: '1g4A7d2gaa@' %>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-user"></i>
                      </span>
                  </div>
                  <%= f.text_field :first_name,  class: "form-control", placeholder: "First Name", autofocus: true,  :required => true %>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-user"></i>
                      </span>
                  </div>
                  <%= f.text_field :last_name,  class: "form-control", placeholder: "Last Name", autofocus: true,  :required => true %>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-user"></i>
                      </span>
                  </div>
                  <%= f.text_field :username,  class: "form-control", placeholder: "Username", autofocus: true,  :required => true %>
                </div>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-envelope-open"></i>
                      </span>
                  </div>
                  <%= f.email_field :email,  class: "form-control", placeholder: "Email", autofocus: true, :required => true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-lock"></i>
                      </span>
                  </div>
                  <%= f.password_field :password,  class: "form-control", placeholder: "Password", autofocus: true,  :required => true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-lock"></i>
                      </span>
                  </div>
                  <%= f.password_field :password_confirmation,  class: "form-control", placeholder: "Confirm Password", autofocus: true, :required => true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-phone
"></i>
                      </span>
                  </div>
                  <%= f.text_field :contact_details,  class: "form-control", placeholder: "Contact Number", autofocus: true,  :required => true %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-home"></i>
                      </span>
                  </div>
                  <%= select_tag("Country", options_for_select(country_options, selected_country(resource)),{prompt: "Please Select Country", :id => 'country_select' ,:class => 'form-control', :onchange => 'country_onchange_handler()'}) %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-home"></i>
                      </span>
                  </div>
                  <%= f.select(:city_id, options_for_select(city_options(resource), selected: selected_city(resource)), { prompt: "Please Select City" }, { class: 'form-control' }) %>
                </div>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="icon-target"></i>
                      </span>
                  </div>
                  <%= f.select(:category_id, options_for_select(Category.all.map{|category| [category.title, category.id]}),  { prompt: "Please Select Category" }, { :required => true, class: 'form-control' }) %>
                </div>
                <div class="row">
                  <div class="col-6">
                    <%= f.submit "Sign Up", class: "btn btn-primary custom-register-page-signup-btn px-4" %>
                    <%= link_to "Login", new_user_session_path, class: "btn btn-primary custom-register-page-login-btn px-4"%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<script>
    function country_onchange_handler(){
        $.ajax({
            url: "/admin/countries/get_cities?country_id=" + $('#country_select option:selected').val()
        })
    }
</script>
